<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>
    <system.diagnostics>
	    <switches>
	      <add name="Microsoft.Owin" value="Verbose" />
	    </switches>
	    <sharedListeners>
              <add name="logfile" type="System.Diagnostics.TextWriterTraceListener" initializeData="output.log" />
	      <add name="console" type="System.Diagnostics.ConsoleTraceListener" />
	    </sharedListeners>

	    <trace autoflush="true" />
	    
	    <sources>
	      <source name="Microsoft.Owin">
	        <listeners>
	          <add name="logfile" />
	        </listeners>
	      </source>
	    </sources>
  	</system.diagnostics>
</configuration>
